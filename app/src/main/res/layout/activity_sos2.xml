<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
    >


    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/fire"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="60dp"
        android:id="@+id/button"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:textSize="40dp"

        android:text="@string/tsunami"

        android:id="@+id/button4"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/terror"
        android:textSize="40dp"
        android:textColor="#ffffff"

        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/flood"
        android:textSize="40dp"


        android:id="@+id/button6"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:textSize="40dp"

        android:text="@string/earthquake"
        android:textColor="#ffffff"
        android:id="@+id/button7"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_marginTop="24dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/ic_whatshot_white_36px"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:background="@mipmap/images33"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_alignTop="@+id/button7"
        android:background="@mipmap/images31"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button7"
        android:layout_toStartOf="@+id/button7"
        android:layout_alignBottom="@+id/button7" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/images61"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button6"
        android:layout_toLeftOf="@+id/button6"
        android:layout_toStartOf="@+id/button6" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:background="@mipmap/images68"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button5"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />


</RelativeLayout>
    </ScrollView>